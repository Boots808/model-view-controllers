</section>
<br>
<br>
{{#if posts.length}}
<section>
  <p class="title is-4 has-text-dark has-text-weight-medium has-text-centered-fullhd is-italic is-family-primary">View your Posts Below:</p>
  <div class="has-text-grey-dark is-italic is-size-6-fullhd">
  <ol>
    {{#each posts as |post|}}
    <div id="recipe-box" class="box has-background-primary-light">
    <ul class="is-size-6">
      {{> post-info post}}
      <br>
      <a href="/dashboard/edit/" class="button is-small edit-link has-background-primary has-text-grey-dark is-size-7-fullhd">Edit Post</a>
    </ul>
    </div>
    <br>
    {{/each}}
  </ol>
  </div>
</section>
{{/if}}


